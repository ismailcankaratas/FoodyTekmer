@model FoodyTekmerEntityLayer.Concreate.Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Ürün Güncelleme</h1>

<form method="post">
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductId" class="d-none"  value="@Model.ProductId" />
    <input type="text" class="form-control" asp-for="Name" style="border:solid" />
    <br />
    <div class="form-group">
        <select class="form-control" asp-for="Status" style="border:solid">
            <option value="true">Aktif</option>
            <option value="false">Pasif</option>
        </select>
    </div>
    <label>Ürün Görsel Url</label>
    <input type="text" class="form-control" asp-for="ImageUrl" style="border:solid" />
    <br />
    <label>Ürün Eski Fiyat</label>
    <input type="text" class="form-control" asp-for="OldPrice" style="border:solid" />
    <br />
    <label>Ürün Yeni Fiyat</label>
    <input type="text" class="form-control" asp-for="NewPrice" style="border:solid" />
    <br />
    <button class="btn btn-info">Ürünü Güncelle</button>
</form>